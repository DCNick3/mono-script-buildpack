#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>


# fail fast
set -e

MONO3_VM_BINARY="http://s3.amazonaws.com/mono3-buildpack/mono-fsharp-nuget3.0.tar.bz2"
NUGET_BINARY="http://s3.amazonaws.com/mono3-buildpack/nuget.tar.bz2"
PAKET_BINARY="https://github.com/fsprojects/Paket/releases/download/0.27.2/paket.exe"

NUGET="http://nuget.org/nuget.exe"
MOZROOT="$1/vendor/mono3/lib/mono/4.5/mozroots.exe"
XBUILD="$1/vendor/mono3/lib/mono/4.5/xbuild.exe"

echo "-----> Downloading mono to $2/$STACK/vendor"
if [ ! -d $2/$STACK/vendor/mono3 ]; then
    mkdir -p $2/$STACK/vendor
    curl $MONO3_VM_BINARY -s | tar xj -C $2/$STACK/vendor
    curl $NUGET_BINARY -L -o "$2/$STACK/vendor/mono3/bin/nuget.exe" 
    curl $PAKET_BINARY -L -o "$2/$STACK/vendor/mono3/bin/paket.exe" 
fi

mkdir -p $1/vendor

echo "-----> Copying $2/$STACK/vendor/mono3 to $1/vendor"
cp -pr "$2/$STACK/vendor/mono3" "$1/vendor/"

rm -fr /app/vendor/mono3

echo "-----> Linking $1/vendor/mono3 --> /app"
ln -s "$1/vendor/mono3" /app/vendor

echo "-----> Setting envvars"
export PATH="$1/vendor/mono3/bin:$PATH"
export LD_LIBRARY_PATH="$1/vendor/mono3/lib:$LD_LIBRARY_PATH"
echo "-----> Importing trusted root certificates"
mono $MOZROOT --sync --import
cd $1

if [ -f paket.dependencies ]; then
  echo "-----> paket.dependencies found, installing packages with paket"
  mono vendor/mono3/bin/paket.exe install
fi

if [ -f packages.config -o -f */packages.config ]; then 
   echo "-----> packages.config found, installing dependencies with nuget" 
   find  -name packages.config | xargs mono $NUGET install -o packages 
fi 

if [ -f app.fsx ]; then
  echo "-----> Compiling app.fsx"
  fsharpc app.fsx
elif [ -f *.sln ]; then
   echo "-----> Compiling application" 
   mono $XBUILD 
fi



